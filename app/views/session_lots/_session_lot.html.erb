<div class="card border-info mb-1 ">
 <%= image_tag session_lot.lot.main_image.url(:medium), class: 'card-img-top'  %>
  <div class="card-header"><%= session_lot.lot.name %></div>
  <div class="card-body">
    <p class="card-text">  <%= t('lot.start_price') %>  <%= session_lot.lot.start_price %> <%= t('lot.byn') %> </p>
    <p class="card-text">  <%= t('lot.time_created') %> <%= session_lot.lot.created_at.to_time.strftime('%I:%M %m/%d/%Y')  %></p>
    <p class="card-text">  <%= t('lot.end_date') %> <%= session_lot.lot.lot_end_date.to_time.strftime('%I:%M %m/%d/%Y')  %></p>
    <a href="<%=session_lot_path(session_lot)%>" class="btn btn-primary"> Description </a>
  </div>
   <div class="card-footer text-muted">
      <p> <%= t('lot.by') %><%=session_lot.lot.user.email %> </p>
      <%= raw session_lot.lot.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-secondary' }.join(' ') %>
  </div>
</div>
