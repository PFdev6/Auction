<div class="card border-info mb-1 ">
 <%= image_tag current_bargain.lot.main_image.url(:medium), class: 'card-img-top'  %>
  <div class="card-header"><%= current_bargain.lot.name %></div>
  <div class="card-body">
    <p class="card-text">  
       <span class="badge badge-pill badge-success"> <%= t('lot.current_price') %>  <%= current_bargain.current_price %> <%= t('lot.byn') %> </span> 
    </p>
    <p class="card-text">  
      <span class="badge"> <%= t('lot.time_created') %> </span> <span class="badge badge-warning"> <%= current_bargain.lot.created_at.to_time.strftime('%I:%M %d/%m/%Y')  %> </span>
    </p>
    <p class="card-text">  
      <span class="badge"> <%= t('lot.end_date') %> </span> <span class="badge badge-warning"> <%= current_bargain.lot.lot_end_date.to_time.strftime('%I:%M %d/%m/%Y')  %>  </span>
    </p>
    <a href="<%=current_bargain_path(current_bargain)%>" class="btn btn-info"> <%=t('current_bargain.open')%> </a>
  </div>
   <div class="card-footer text-muted">
      <p> <%= t('lot.by') %><%=current_bargain.lot.user.email %> </p>
      <%= raw current_bargain.lot.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-secondary' }.join(' ') %>
  </div>
</div>
