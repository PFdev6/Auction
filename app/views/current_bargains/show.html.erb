<% if stopped?( @current_bargain.lot)%>
	<div class="alert alert-danger">
		<strong><%= t('lot.stopped')%></strong>
	</div>
<% end %>

<div class="container">
	<div class="row p-4">
	<div class="col-lg-5">
		<div class="rounded border border-danger">
			<%= image_tag @current_bargain.lot.main_image.url(:medium), class: 'center-block rounded' %>
		</div>
	</div>
		<div class="col-lg-1">
		</div>
		<div class="col-lg-6 border border-primary rounded">
			<div class="row">
				<div class="col-lg-7 m-1">
					<div  class="col-12 border border-success rounded badge"> 	
						<% if !@current_bargain.played_out %>
							<%= t('current_bargain.potential_winner')%>:
							<% if @current_bargain.id_user_winner%>
								<%= link_to t('click'), user_path(@current_bargain.id_user_winner) %> 
							<% else %>
								<%= t('current_bargain.no_winner_yet')%>
							<% end %>
						<% end %>
					</div>
				</div>
				<div  class="row m-2">
					<div class="col-lg-7">		
						<%= link_to t('lot.description'), lot_path(@current_bargain.lot), class: 'm-1 border border-danger rounded '%>
						<%= link_to t('lot.user'), user_path(@current_bargain.user), class: 'm-1 border border-danger rounded '%>
					</div>
				</div>
				<div class="col-lg-4">
					<ul>
						<li> 	<%= t('lot.start_price')%> <%= @current_bargain.lot.start_price %> </li>	
						<li> 	<%= t('lot.autopurchase_price')%> <%= @current_bargain.lot.autopurchase_price %> </li>	
						<li> 	<%= t('lot.current_price')%> <%= @current_bargain.current_price %> </li>	
					</ul>
				</div>
			</div>

			<% if current_user.present? %>
				<div class="badge col-lg-12">
					<% if current_user != @current_bargain.user  && !@current_bargain.played_out  %>
						<%render 'form_add'%>
					<% elsif @current_bargain.played_out%> 
						<%= get_winner_info(@current_bargain.id_user_winner)%>
					<% end %>
				</div>
			<% end %>
			<%= render 'users_clicked_add'%>
		</div>
	</div>
	<br/>
	<div class="col-lg-12">
		<h2> <%= t('current_bargain.comments')%>: </h2>
		<%= render "comments/form" %>
		<%= nested_comments @comments %>
	</div> 
</div>