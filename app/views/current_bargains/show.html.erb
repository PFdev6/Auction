<div class="container">
	<div class="row">
		<div class="col">
			<%= image_tag @current_bargain.lot.main_image.url(:medium) %>
		</div>
		<div class="row col">
			<% if @current_bargain.id_user_winner %>
				<% @current_bargain.id_user_winner.nickname %>
			<% else %>
				<%= t('current_bargain.winner_is_empty')%>
			<% end %>
		</div>
		<div class="row col">
			<%= t('lot.start_price')%>
		</div>
		<div class="col">
			<%= link_to t('lot.user'), user_path(@current_bargain.user), class: 'badge badge-secondary' %>
		</div>
	</div>
	<div class="row">
		<div class="col">
			<%= link_to t('lot.description'), lot_path(@current_bargain.lot), class: 'badge badge-secondary' %>
		</div>
		<div class="col">
			<label class="col-2 "> <%=t('lot.add') %></label>
			<div class="col">
				<input class="form-control" type="number" value="1">
			</div>
		</div> 
	</div>
</div>
<div class="row">
	Comments	
</div>