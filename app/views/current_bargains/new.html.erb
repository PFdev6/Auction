

<%= bootstrap_form_for @current_bargain do |f| %>

    <%= f.text_field :name %>

    <%= f.text_area :description %>

    <%= f.datetime_select :lot_end_date,  wrapper: :date, input_html: {value: ' '} %>
  
    <%= f.number_field :start_price,  min: '0', step: '0.1'  %>
    
    <%= f.file_field :main_image %>

    <%= f.text_field :all_tags %>

    <%= f.check_box :inprocess, checked_value: true, unchecked_value: false %>

    <%= f.button :submit, method: inprocess(@lot) %>

    <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
  
<% end %>

