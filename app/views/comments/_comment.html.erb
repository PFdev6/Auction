<div class="media-body alert alert-info">
  <h4 class="media-heading">
    <div class="row">
      <div class="col-lg-2">
        <%= image_tag comment.user.avatar.url(:thumb), width:'50', height:'50' %>
      </div>
      <div class="col-lg-3">
        <%= link_to comment.user.nickname, user_path(comment.user) %> </p>
      </div>
    </div>
  </h4>
    <%= comment.created_at.strftime('%b %d, %Y at %H:%M') %>
  <p>
    <%= simple_format comment.msg %>
  </p>
  <div class="actions">
    <%= link_to t('Reply'), new_polymorphic_path([@commentable, Comment.new], :parent_id => comment), class: "badge badge-secondary" %>
  </div>
  <%= nested_comments comment.children %>
</div>