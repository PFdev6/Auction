<div class="media-body alert rounded border border-info">
  <h4 class="m-2 media-heading">
    <div class="row rounded border border-dark">
      <div class="col-lg-1">
        <%= image_tag comment.user.avatar.url(:thumb), width:'50', height:'50', class:'p-1' %>
      </div>
      <div class="col-lg-2">
        <%= link_to comment.user.nickname, user_path(comment.user), class: 'mt-1 badge badge-dark' %> </p>
      </div>
    </div>
  </h4>
    <%= comment.created_at.strftime('%b %d, %Y at %H:%M') %>
  <div class="p-2 rounded border border-primary">
      <%= simple_format comment.msg %>
  </div>
  <hr>
  <div class="actions">
    <%= link_to t('Reply'), new_polymorphic_path([@commentable, Comment.new], :parent_id => comment), class: "badge badge-dark" %>
  </div>
  <%= nested_comments comment.children %>
</div>