<!DOCTYPE html>
<html>
  <head>
    <title>Auction</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
    <a class="navbar-brand" href="<%=lots_path%>"> Main </a>
    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
      <% if user_signed_in?%>
        <li class="nav-item active mr-sm-2"><a class="badge badge-info" href="<%=user_path(current_user)%>"><%= t('main.user') %><span class="sr-only">(current)</span></a></li>
        <li class="nav-item active mr-sm-2"><a class="badge badge-info" href="<%=new_lot_path%>"> <%= t('main.new_lot') %> <span class="sr-only">(current)</span></a></li>
        <li class="nav-item active mr-sm-2"><a class="badge badge-info" href="<%=session_lots_path%>"> <%= t('maiĞ´.all_played_lots') %> <span class="sr-only">(current)</span></a></li>
        </ul>
        <%= link_to t('main.logout'), destroy_user_session_path, :method => :delete, class: 'nav-item active mr-sm-2 badge badge-info' %>
      <% else %>
        </ul> 
        <a class="badge badge-info mr-sm-2" href="<%=new_user_registration_path%>"><%= t('main.signup') %> <span class="sr-only">(current)</span></a>
        <a class="badge badge-info mr-sm-2" href="<%=new_user_session_path%>"> <%= t('main.signin') %><span class="sr-only">(current)</span></a>
      <% end %>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-1" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-light my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>
    <div class="container main">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, message| %>
            <div class="alert alert-<%= name %>">
              <%= message %>
            </div>
          <% end %>
        </div>
      <div> 


      <div class="row">
        <div class="col-lg-2"> <div class="badge badge-pill badge-warning"><%= t('tags')%> </div>
          <% get_all_tag(Tag.counts, %w(tag1, tag2, tag3, tag4, tag5)) do |tag, css_class|%>
          <%= link_to tag.name, tag_path(tag.name), class: 'badge badge-secondary' %>
          <%end%>
        </div>
          <%= yield %>
        <div>
        <% if @user == current_user %>
            <%= render @user %>
          </div>  
        <% end %>
    </div>
  
  </body>
</html>
