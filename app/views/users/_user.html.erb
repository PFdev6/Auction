<div class="card" style="width: 15rem;">
  <%= image_tag user.avatar.url(:medium), class: 'card-img-top rounded-circle'  %>
  <div class="card-body">
    <ul class="list-group">
        <li class="list-group-item active"> <%= t 'user.account'%>: <%= user.email %></li>
        <li class="list-group-item"> <%= t 'user.fullname'%>: <%= user.first_name%> <%= user.second_name%></li>
        <li class="list-group-item"><%= t 'user.about_user'%>: <%= user.about_users%></li>
        <li class="list-group-item"> <%= fa_icon 'thumbs-up', type: :solid%> <%= user.likes%></li>
        <% if current_user == user %>
          <li class="list-group-item"> <a class="badge badge-info" href="<%=user_user_bids_path(current_user)%>"> <%= t('main.my_bids') %> <span class="sr-only">(current)</span></a></li>
        <% end %>
        <% if can? :edit, @user%>
          <li class="list-group-item"> <%= link_to  t('user.edit'), edit_user_path(user) %> </li>
        <% end %>
    </ul>
  </div>
  <i class="material-icons md-24 thumb_up_alt"></i>
</div>
