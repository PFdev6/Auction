<div class="card" style="width: 15rem;">
  <%= image_tag user.avatar.url(:medium), class: 'card-img-top rounded-circle'  %>
  <div class="card-body">
    <ul class="list-group">
        <li class="list-group-item active">Account: <%= user.email %></li>
        <li class="list-group-item">Name: <%= user.first_name%> <%= user.second_name%></li>
        <li class="list-group-item">About user: <%= user.about_users%></li>
        <li class="list-group-item"> <%= fa_icon 'thumbs-up', type: :solid%> <%= user.likes%></li>
        <% if can? :edit, @user%>
          <li class="list-group-item">
            <%= link_to  t('user.edit'), edit_user_path(user) %>
          </li>
        <% end %>
    </ul>
  </div>
  <i class="material-icons md-24 thumb_up_alt"></i>
</div>
