<%= stylesheet_link_tag 'users' %>

<% if @user.lots.nil?%>
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<%= t('user.lots_empty')%>
		</div>
	</div>
<% else %>
	<div class="row">
		<div class="col-lg-9">
			<div class="card-columns"> 
				<%= render @lots %>
			</div>
		</div>
		<div class="col-lg-3">
			<%= render @user%>
		</div>
	</div>
	<%= will_paginate @lots, renderer: 'BootstrapPaginationHelper::LinkRenderer'  %>

<% end %>
