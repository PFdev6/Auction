<%= stylesheet_link_tag 'users' %>

<%= link_to "NEW", user_path(@user, newlots: true), controller: 'users', query:"old", class:'btn btn-outline-warning' %>
<%= link_to "OLD", user_path(@user, newlots: false), controller: 'users', query:"new", class:'btn btn-outline-danger' %>

<% if @user.lots.nil?%>
	<div class="jumbotron jumbotron-fluid">
		<div class="container">
			<%= t('user.lots_empty')%>
		</div>
	</div>
<% else %>
	<div class="row mt-1">
		<div class="col-lg-9">
			<div class="card-columns"> 
				<%= render @lots %>
			</div>
		</div>
		<div class="col-lg-3">
			<%= render @user%>
		</div>
	</div>
	<%= will_paginate @lots, renderer: 'BootstrapPaginationHelper::LinkRenderer'  %>

<% end %>
