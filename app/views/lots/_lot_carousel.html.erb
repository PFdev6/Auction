<div id="carousel" class="carousel slide" data-ride="carousel">
	<br/>
	
	<div class="carousel-inner">
		<div class="carousel-item active">
			<%= image_tag @lot.main_image(:medium),  style: 'width: 20rem; height: 18rem;', class: 'center-block d-block rounded' %>
		</div>
		<%get_imgdescr(@lot).each do |img| %>
			<div class="carousel-item">
				<%= image_tag img.url(:medium), class: 'd-block rounded',  style: 'width: 20rem;  height: 18rem;' %>
			</div>
		<% end %>
	</div>
	<a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>