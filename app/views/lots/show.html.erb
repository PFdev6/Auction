<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div class="alert alert-dark" role="alert">
        <span class="badge"> <%= @lot.name %> </span>
      </div>
      <small>
        <% if @lot.isplayedout? %>
          <%= link_to  t('lot.link_to_baragain'), current_bargains_path(@lot.id) %>
        <% end %>
        <p class="card-text"> <%= t('lot.start_price') %>  <span class="badge badge-pill badge-success"> <%= @lot.start_price %> <%= t('lot.byn') %> </span> </p>
        <time> <%= t('lot.time_created') %> <span class="badge badge-light"> <%= @lot.created_at.to_time.strftime('%I:%M %m/%d/%Y')  %> </span>  </time>
        <% if can? :edit, @lot %>
          <%= link_to  t('lot.edit'), edit_lot_path(@lot), class: "badge badge-dark"  %>
          |
          <%= link_to  t('lot.delete'), lot_path(@lot),class: "badge badge-dark",  method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </small>
    </div>
    <div class="col-lg-6">
      <%= render 'lot_carousel' %>
      </div>
  </div>
  <div class="row">
    <div class="col-lg-5">
      <h2> 
        <span class="badge"> <%= t('lot.description') %> </span>
      </h2>
        <span class="badge"> <%= @lot.description %> </span>
    </div>
  </div>
</div>