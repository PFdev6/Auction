<% if @lot.errors.any? %>
  <div class="alert alert-danger">
    <h5> Errors </h5>
    <ul>
      <% @lot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @lot do |f| %>

    <div class='form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class='form-group'>
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class='form-group'>
        <%= f.label :start_price %> 
        <%= f.number_field :start_price, in: 0.0..1000000.0, step: 0.1,  class: 'form-control' %>
    <div>

    <div class='form-group'>
      <%= f.file_field :main_image, class: 'form_control' %>
    <div>

    <div class='form-group'>
        <%= f.label :all_tags %>
        <%= f.text_field :all_tags, class: 'form-control' %>
    </div>


    <div class='form-group'>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
        <%= link_to 'Back', :back, class: 'btn btn-outline-secondary' %>
    </div>

<% end %>