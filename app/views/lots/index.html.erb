<div class= "row">
	<div class="col-lg-8 mt-1">
		<%= link_to "NEW", lots_path(newlots: true), controller: 'lots', class:'btn btn-outline-warning' %>
		<%= link_to "OLD", lots_path(newlots: false), controller: 'lots', class:'btn btn-outline-danger' %>
		<div class="row">
			<%= render @lots %>
		</div>
		<%= will_paginate @lots, renderer: 'BootstrapPaginationHelper::LinkRenderer'  %>
	</div>
	<div class= "ml-2 mt-1 col-lg-3">
		<% if show_filter?%>	
			<%= render 'filter' %>
		<%end%>
	</div>
</div>

