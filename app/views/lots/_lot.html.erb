
<div class="card border-info mb-1 " style="width: 16rem;">
 <%= image_tag lot.main_image.url(:medium), class: 'card-img-top'  %>
  <div class="card-header">
    <%= lot.name %>
     <% if !lot.isplayedout? %>
        <span class="badge badge-pill badge-warning"> <%= t('lot.stopped') %> </span>
    <% elsif Time.now < lot.lot_end_date%>
        <span class="badge badge-pill badge-success"> <%= t('lot.in_process') %> </span>
    <% else Time.now >= lot.lot_end_date%>
        <span class="badge badge-pill badge-danger"><%= t('lot.expired')%></span>    
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text">  <span class="badge"> <%= t('lot.start_price') %> </span>
        <span class="badge badge-pill badge-success"> <%= lot.start_price %> <%= t('lot.byn') %> </span>
    </p>
    <p class="card-text">  <span class="badge"> <%= t('lot.autopurchase_price') %> </span>
        <span class="badge badge-pill badge-success"> <%= lot.autopurchase_price %> <%= t('lot.byn') %> </span>
    </p>
    <p class="card-text">   <span class="badge"> <%= t('lot.time_created') %> </span> 
        <span class="badge badge-warning"><%= lot.created_at.to_time.strftime('%R %d/%m/%Y')  %> </span>
    </p>
    <p class="card-text">  <span class="badge"> <%= t('lot.end_date') %> </span> 
          <span class="badge badge-warning"><%= lot.lot_end_date.to_time.strftime('%R %d/%m/%Y')  %> </span>
    </p>
    <a href="<%=lot_path(lot)%>" class="btn btn-primary"> Description </a>
  </div>
    <div class="card-footer text-muted">
      <p> <%= t('lot.by') %> <%= link_to lot.user.nickname, user_path(lot.user) %> </p>
      <%= raw lot.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-secondary' }.join(' ') %>
  </div>
</div>

