<div class="card border-info mb-1 h-100" style="width: 18em;">
 <%= image_tag lot.main_image.url(:medium), class: 'card-img-top'  %>
  <div class="card-header"><%= lot.name %></div>
  <div class="card-body">
    <p class="card-text">  Start price: <%= lot.start_price %> BYN</p>
    <p class="card-text">  Time of creation: <%= lot.created_at.to_time.strftime('%I:%M %m/%d/%Y')  %></p>
    <p class="card-text">  End date: <%= lot.lot_end_date.to_time.strftime('%I:%M %m/%d/%Y')  %></p>
    <a href="<%=lot_path(lot)%>" class="btn btn-primary"> Description </a>
  </div>
   <div class="card-footer text-muted">
      <p>By:<%=lot.user.email %> </p>
      <%= raw lot.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-secondary' }.join(' ') %>
  </div>
</div>

